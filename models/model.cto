/**
 * Sample business network definition.
 */
namespace org.property.registration

participant User identified by userId {
  o String userId
  o String name
  o String email
  o Integer identityNo //Passport, SSN, Aadhar etc.
  o String bankName
  o String bankAddress
  o Integer accountNo
  o String ifscCode
  o Integer balance
}

asset Property identified by PID {
  o String PID
  o Integer marketPrice
  o DateTime regDate
  o String propertyType
  o String location
  o String status default= "Registered"
  --> User owner
}

asset PropertyListing identified by PLID {
  o String PLID
  --> Property property
}

/* 	Transaction Created
	This is used to addpnew properties in the system.
*/
transaction createProperty {
  o String PID
  o Integer marketPrice
  o DateTime regDate
  o String propertyType
  o String location
}

/* 	Transaction Created
	This is used to set up properties in the system for sale.
*/
transaction intentForSale {
  --> Property property
}

/* 	Transaction Created
	This is used to purchase properties in the system which is for sale.
*/
transaction purchaseProperty {
  --> PropertyListing propertylisting
}